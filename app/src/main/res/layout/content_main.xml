<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context="br.com.solucoes161.java.smscarmanager.br.com.solucoes161.android.smscarmanager.MainActivity"
    android:background="@drawable/bg"
    android:id="@+id/rl_root"
    android:padding="0dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/mapa"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:id="@+id/ll_main">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#32ffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imv_phone_number"
                android:src="@mipmap/ic_phone_ok"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0000000000"
                android:id="@+id/txv_phone_number"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Localização"
            android:id="@+id/btn_locate"
            android:background="@drawable/button_bg"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_large_material"
            android:drawableLeft="@mipmap/ic_locate"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combustível"
            android:id="@+id/btn_oil"
            android:background="@drawable/button_bg"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_large_material"
            android:drawableLeft="@mipmap/ic_oil"
            android:drawableRight="@mipmap/ic_downsign"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ligar"
                        android:id="@+id/btn_sup_oil"
                        android:layout_gravity="center"
                        android:background="@drawable/acc_button_bg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:drawableLeft="@mipmap/ic_supoil"
                        android:padding="10dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cortar"
                        android:id="@+id/btn_cut_oil"
                        android:layout_gravity="center"
                        android:background="@drawable/acc_button_bg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:drawableLeft="@mipmap/ic_cutoil"
                        android:padding="10dp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eletricidade"
            android:id="@+id/btn_elec"
            android:background="@drawable/button_bg"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_large_material"
            android:drawableLeft="@mipmap/ic_elec"
            android:drawableRight="@mipmap/ic_downsign"
            android:contextClickable="false" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ligar"
                    android:id="@+id/btn_sup_elec"
                    android:layout_gravity="center"
                    android:background="@drawable/acc_button_bg"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:drawableLeft="@mipmap/ic_supelec"
                    android:padding="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cortar"
                    android:id="@+id/btn_cut_elec"
                    android:layout_gravity="center"
                    android:background="@drawable/acc_button_bg"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:drawableLeft="@mipmap/ic_cutelec"
                    android:padding="10dp" />
            </LinearLayout>
        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alarme Chave"
            android:id="@+id/btn_sos_key"
            android:background="@drawable/button_bg"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_large_material"
            android:drawableLeft="@mipmap/ic_sos_key"
            android:drawableRight="@mipmap/ic_downsign" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ligar"
                        android:id="@+id/btn_sos_key_on"
                        android:layout_gravity="center"
                        android:background="@drawable/acc_button_bg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:drawableLeft="@mipmap/ic_sos_key_on"
                        android:padding="10dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desligar"
                        android:id="@+id/btn_sos_key_off"
                        android:layout_gravity="center"
                        android:background="@drawable/acc_button_bg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:drawableLeft="@mipmap/ic_sos_key_off"
                        android:padding="10dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo"
            android:id="@+id/btn_mode"
            android:background="@drawable/button_bg"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_large_material"
            android:drawableLeft="@mipmap/ic_track"
            android:drawableRight="@mipmap/ic_downsign"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitor"
                    android:id="@+id/btn_monitor_mode"
                    android:layout_gravity="center"
                    android:background="@drawable/acc_button_bg"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:drawableLeft="@mipmap/ic_monitor"
                    android:padding="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rastrear"
                    android:id="@+id/btn_tracker_mode"
                    android:layout_gravity="center"
                    android:background="@drawable/acc_button_bg"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:drawableLeft="@mipmap/ic_track"
                    android:padding="10dp" />

            </LinearLayout>
        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Rastreamento"
            android:id="@+id/btn_auto_track"
            android:background="@drawable/button_bg"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_large_material"
            android:drawableLeft="@mipmap/ic_autotrack"
            android:drawableRight="@mipmap/ic_downsign" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ligar"
                        android:id="@+id/btn_autotrack_on"
                        android:layout_gravity="center"
                        android:background="@drawable/acc_button_bg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:drawableLeft="@mipmap/ic_autotrack_on"
                        android:padding="10dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desligar"
                        android:id="@+id/btn_autotrack_off"
                        android:layout_gravity="center"
                        android:background="@drawable/acc_button_bg"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:drawableLeft="@mipmap/ic_autotrack_off"
                        android:padding="10dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chamar"
            android:id="@+id/btn_call"
            android:background="@drawable/button_bg"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_large_material"
            android:drawableLeft="@mipmap/ic_locate" />
    </LinearLayout>

</RelativeLayout>
